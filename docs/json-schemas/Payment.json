{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Payment",
  "type": "object",
  "required": ["studentId","amount","status","date"],
  "properties": {
    "studentId": { "type": "string" },
    "amount": { "type": "number" },
    "method": { "type": "string" },
    "status": { "type": "string", "enum": ["pending","completed","failed"] },
    "date": { "type": "string", "format": "date-time" },
    "details": { "type": "object" }
  }
}
